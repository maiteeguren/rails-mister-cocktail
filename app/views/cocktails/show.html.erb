<div class="show-container d-flex align-items-center">
    <div class="cocktail-card">
        <%= cl_image_tag @cocktail.photo.key, width: 400, class: "cocktail-image" %>
        <div class="cocktail-info">
            <a href="<%= cocktails_path %>" class="back-button"><i class="fas fa-times"></i></a>
            <h2 class="pb-2"><%= @cocktail.name %></h2>
            <p class="subtitle">Ingredients</p>
            <ul>
                <% @cocktail.doses.each do |dose| %>
                    <li>
                        <%= dose.description %> <%= dose.ingredient.name %>
                        <%= link_to icon('fas', 'times'), dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
                    </li>
                <% end %>
            </ul>
            <p class="subtitle d-flex justify-content-between align-items-center">Add a new dose<a href="#" id="new-dose"><i class="fas fa-plus"></i></a></p>
            <div class="dose-form">
                <%= simple_form_for [@cocktail, @dose], class:'hide-form' do |f| %>
                    <div class="form-inputs" id="new-dose-form">
                        <%= f.input :description %>
                        <%= f.association :ingredient %>
                        <%= f.button :submit, class: "btn" %>
                    </div>
                <% end %>
            <div>
        </div>
    </div>
</div>