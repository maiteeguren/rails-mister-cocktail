<h2><%= @cocktail.name %></h2>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<h3>Ingredients:</h3>
<ul>
<% @cocktail.doses.each do |dose| %>
    <li>
        <%= dose.description %> <%= dose.ingredient.name %> 
        <%= link_to "x", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
<% end %>
</ul>

<%= link_to 'Add new dose', new_cocktail_dose_path(@cocktail) %>