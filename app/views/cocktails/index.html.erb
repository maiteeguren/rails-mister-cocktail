<div class="banner d-flex align-items-center">
    <div class="add-new">
        <a href="<%= new_cocktail_path %>"></a>
        <p class="plus">+ <span class="hidden">Add a new cocktail</span></p>
    </div>
    <img class="logo" src="https://res.cloudinary.com/maiteeguren/image/upload/v1599200707/xtiioccrqcgt44djo4qr.png">
</div>

<div class="grid-container">
    <div class="card-columns">
        <%  @cocktails.shuffle.each do |cocktail|  %>
            <a href="<%= cocktail_path(cocktail)%>">
                <div class="photo">
                    <%= cl_image_tag cocktail.photo.key, width: 270, crop: :fill unless cocktail.nil? %>
                    <div class="overlay">
                        <h5 class="title"><%= cocktail.name %></h5>
                        <p> This content is a little bit longer.</p>
                    </div>
                </div>
            </a>
        <% end %>
    </div>
</div>

