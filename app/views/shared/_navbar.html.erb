<div class="w-33">
    <div class="mobile-menu">
        <img src="https://res.cloudinary.com/maiteeguren/image/upload/v1608715767/345387-200_otkuq5.png" width="50px" id="menu-icon">
        <img src="https://res.cloudinary.com/maiteeguren/image/upload/v1608715767/img_216627_wyjfkh.png" width="30px" class="hidden" id="exit-icon">
    </div>
    <ul class="menu hide-menu">
        <li><a class="nav-item" href="#cocktails">All Recipes</a></li>
        <% if current_page?(root_path) %>
            <% if user_signed_in? %>
                <li><a class="nav-item" href="#" data-toggle="modal" data-target="#new-cocktail-modal">Add New Cocktail</a></li>
            <% else %>
                <li><%= link_to "Add New Cocktail", "", class:"nav-item", data: {toggle: "modal", target: "#login-modal"} %></li>
            <% end %>
        <% end %>
    </ul>
</div>
<div class="w-33 text-center">
    <a href="<%= cocktails_path %>"><h1>Miss Cocktail</h1></a> 
</div>
<div class="w-33">
    <ul class="menu hide-menu justify-content-end">
        <li class="nav-item">
            <form novalidate="novalidate" class="simple_form search" action="/search" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
                <div class="search-form-control form-group d-flex">
                    <input class="form-control string required" type="text" name="params[query]" id="search_query" placeholder="Search by name..." />
                    <button name="button" type="submit" class="btn">Search</button>
                </div>
            </form>
        </li>

        <li class="d-flex align-items-center">
            <% if user_signed_in? %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"nav-item log-in" %>
            <% else %>
                <%= link_to "Login", "", class:"nav-item log-in", data: {toggle: "modal", target: ".bd-example-modal-lg"} %>
            <% end %>
        </li>
    </ul>
</div>

<%= render 'shared/login_form' %>
<% if current_page?(root_path) %>
    <%= render 'shared/cocktail-modal' %>
<% end%>
