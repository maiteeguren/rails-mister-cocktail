<nav class="fixed-top">
    <a href="<%= cocktails_path %>"><h4>Miss Cocktail</h4></a>
    <div class="mobile-menu">
        <i class="fas fa-bars white-color" id="menu-icon"></i>
        <i class="fas fa-times blue hidden" id="exit-icon"></i>
    </div>
    <ul class="menu hide-menu">
        <li>            
            <form id="inline-form" novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
                <div class="search-form-control form-group">
                    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
                    <button name="button" type="submit" class="flat">
                    <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </li>
        <li><a href="#" class="new-cocktail-btn btn purple">Add a new cocktail</a></li>
    </ul>
</nav>

<div id="new-cocktail-modal">
    <div class="new-cocktail">
        <div class="d-flex justify-content-between">
            <h2 class="white">Add a new cocktail</h2>
            <a href="#" class="close-modal">&times;</a>
        </div>
        <div class="new-cocktail-form">
            <%= simple_form_for(@cocktail) do |f| %>
                <div class="d-flex align-items-end">
                    <%= f.input :name %>
                    <label class="btn transparent m-0 add-photo">
                    Add a photo
                    <span style="display:none;">
                        <%= f.input :photo, as: :file %>
                    </span>
                    </label>
                </div>
                <%= f.button :submit, class: 'btn purple mb-0 mx-auto' %>
            <% end %>
        </div>
    </div>
</div>
