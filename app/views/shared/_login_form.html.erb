<div class="modal fade bd-example-modal-lg"tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title grey" id="exampleModalLabel">Please Log in</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <img src="https://res.cloudinary.com/maiteeguren/image/upload/v1608715767/img_216627_wyjfkh.png" width="30px" class="close-modal">
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                required: false,
                autofocus: true,
                label_html: { autocomplete: "email", class:"btn" } %>
            <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label_html: { class: "btn" } %>
            <%= f.input :remember_me, label_html: { class: "btn p-0" }, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="modal-footer">
            <%= f.button :submit, "Log in", class: "btn btn-grey" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>