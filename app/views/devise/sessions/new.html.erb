<nav class="sticky">
    <%= render 'shared/navbar' %>
</nav>

<div class="d-flex align-items-center justify-content-center h-100vh">
  <div class=" p-5 pink-bg d-flex flex-column justify-content-center w-500">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label_html: { class:"btn white m-0" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label_html: { class:"btn white m-0" } %>
        <%= f.input :remember_me, label_html: { class: "btn white m-0" }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-white my-0 mx-auto d-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>