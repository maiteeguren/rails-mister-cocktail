<nav class="sticky">
    <%= render 'shared/navbar' %>
</nav>

<div class="d-flex align-items-center justify-content-center h-100vh">
  <div class=" p-5 pink-bg d-flex flex-column justify-content-center w-500">
    <h2 class="text-center">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label_html: { class:"btn white m-0" }  %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn btn-white my-2 mx-auto d-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>